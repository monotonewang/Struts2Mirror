<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">


<struts>
    <!--struts文件分离。分模块处理-->
    <package name="default" namespace="/" extends="struts-default">
        <action name="login1" class="com.demo.struts.action.login.LoginAction1">
            <result>/success.jsp</result>
        </action>

        <action name="login2" class="com.demo.struts.action.login.LoginAction2">
            <result name="failer">/jsp/login/login2.jsp</result>
            <result name="redirect">/jsp/login/loginSuccess.jsp</result>
        </action>
    </package>

</struts>
